#include <iostream>
using namespace std;

int main() {
    
    int n;
    cin>>n;
    
    int i=1;
    while(i<=n){
        
        // First triangle
        int num1=n-i+1,j=1;
        while(num1){
            cout<<j;
            j++;
            num1--;
        }
        
        // Second triangle
        int star=i-1;
        while(star){
            cout<<"*";
            star--;
        }
        
        // Third Triangle
        star=i-1;
        while(star){
            cout<<"*";
            star--;
        }
        
        // Fourth Triangle
        int num2=n-i+1;
        while(num2){
            cout<<num2;
            num2--;
        }
        
        
        cout<<endl;
        i++;
        
    }
    

    return 0;
}
